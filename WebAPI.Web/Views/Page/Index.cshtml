@model WebAPI.Web.Models.PageViewModel
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

<div class="main_blog_area blog_details">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="blog_details_left">
                <div class="blog_gallery">
                    <div class="blog_header">

                        <h2><a href="#">@Model.Name</a></h2>
                        <div class="blog__post">
                            <ul>
                                <li class="post_author">Posts by : @Model.CreatedBy</li>
                                <li class="post_date"> @Model.CreatedDate	</li>
                            </ul>
                        </div>
                    </div>
                    <div class="blog_active owl-carousel">
                        <div class="blog_thumb blog__hover">
                            <a href="blog-details.html"><img src="@Model.Image" alt=""></a>
                        </div>
                    </div>

                    <div class="blog_entry_content">

                        @Html.Raw(Model.Content)
                        <p class="blockquote">Quisque semper nunc vitae erat pellentesque, ac placerat arcu consectetur. In venenatis elit ac ultrices convallis. Duis est nisi, tincidunt ac urna sed, cursus blandit lectus. In ullamcorper sit amet ligula ut eleifend. Proin dictum tempor ligula, ac feugiat metus. Sed finibus tortor eu scelerisque scelerisque.</p>
                        @Html.Raw(Model.Content)
                        <div class="blog_entry_meta">
                            <ul>
                                <li><a href="#">0 BÌNH LUẬN</a></li>
                                <li> / Tags: <a href="#"> THỜI TRANG</a></li>
                            </ul>
                        </div>
                        <div class="wishlist-share">
                            <h4>Chia Sẻ::</h4>
                            <ul>
                                <li><a href="#"><i class="fa fa-rss"></i></a></li>
                                <li><a href="#"><i class="fa fa-vimeo"></i></a></li>
                                <li><a href="#"><i class="fa fa-tumblr"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    <!--services img area-->
                    <div class="srrvices_img_area">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="single_img_services mb-20">
                                    <div class="services_thumb">
                                        <img src="/Assets/client/blog/blog6.jpg" alt="">
                                    </div>
                                    <div class="services_content">
                                        <h3>CÁC Ý TƯỞNG </h3>
                                        <div class="tweetlink favorite">
                                            <a href="#"> March 10, 2018 </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 ">
                                <div class="single_img_services mb-20">
                                    <div class="services_thumb">
                                        <img src="/Assets/client/blog/blog9.jpg" alt="">
                                    </div>
                                    <div class="services_content">
                                        <h3>THIẾT KẾ BÌA</h3>
                                        <div class="tweetlink favorite">
                                            <a href="#"> March 10, 2018 </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="single_img_services mb-20">
                                    <div class="services_thumb">
                                        <img src="/Assets/client/blog/blog10.jpg" alt="">
                                    </div>
                                    <div class="services_content">
                                        <h3>PHÁT TRIỂN CỐT LÕI</h3>
                                        <div class="tweetlink favorite">
                                            <a href="#"> March 10, 2018 </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--services img end-->
                    <div class="blog__page_content">
                        <p>@Html.Raw(Model.Content)</p>
                    </div>
                    <div class="comments_area">
                        <div class="comments__title">
                            <h3>Để Lại Một Câu Trả Lời </h3>
                        </div>
                        <div class="comments__notes">
                            <p>Địa chỉ email của bạn sẽ không được công bố..</p>
                        </div>
                        <div class="product_review_form blog_form">
                            <form action="#">
                                <div class="row">
                                    <div class="col-12">
                                        <label for="review_comment">bình luận </label>
                                        <textarea name="comment" id="review_comment"></textarea>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <label for="author">Tên</label>
                                        <input id="author" type="text">
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <label for="email">Email </label>
                                        <input id="email" type="text">
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <label for="website">website </label>
                                        <input id="website" type="text">
                                    </div>
                                </div>
                                <button type="submit">ĐĂNG BÌNH LUẬN</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>